<h2 class="pageTitle">Single Pizza</2>

<p>First Name: <%= @order.first_name %> </p>
<p>Last Name: <%= @order.last_name %> </p>
<p>Topping: <%= @order.topping %> </p>
<p>Quantity: <%= @order.quantity %> </p>
<form method="post" action ="/pizza-orders/<%= @order.id %>/delete">
  <input type="submit" value="Delete Pizza"/>
</form>
<form method="get" action ="/pizza-orders/<%= @order.id %>/edit">
  <input type="submit" value="Edit Pizza"/>
</form>
